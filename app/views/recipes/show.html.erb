<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-3">
      <div class="card-content white-text">
        <!-- Not sure what the below does or why it is here -->
        <!-- <p id="notice"><%= notice %>
        </p> -->
        <span class="card-title"><%= @recipe.name %></span>
        <p><strong>Difficulty:</strong> <br><%= @recipe.difficulty %></p>
        <br>
        <p><strong>Prep time:</strong> <br><%= @recipe.prep_time %> minutes</p>
        <br>
        <p><strong>Directions:</strong><br> <%= @recipe.directions %></p>
        <br>
        <p><strong>Ingredients:</strong><br> <%= @recipe.ingredients%></p>
        <br>
        <p><strong>Meal:</strong><br> <%= @recipe.category%></p>
        <p>
          <br>
          <% if user_signed_in? %>
            <% if @current_user_rating %>
              <strong>Your Rating:</strong>
              <%= @current_user_rating.score %>
            <% end %>
          <% end %>
        </p>
      </div>
      <div class="card-action">
        <% if user_signed_in? %>
          <%= link_to 'Rate this recipe', new_recipe_rating_path(@recipe) %>
          <% if @recipe.user_id == current_user.id %>
            <%= link_to 'Edit', edit_recipe_path(@recipe) %>
          <% end %>
        <% end %>
        <%= link_to 'Back', recipes_path %>
      </div>
    </div>
  </div>
</div>
